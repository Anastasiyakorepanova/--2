import static org.junit.Assert.*;
import org.junit.*;

import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Paths;
import java.math.BigInteger;

public class MainTest {
    private Main main;

    @Before
    public void setUp() throws IOException {
        // Создаем временный файл с числами для тестирования
        Files.write(Paths.get("checking_correct_test.txt"), "1 2 3 4 5 100 0".getBytes());
        main = new Main("test_numbers.txt");
    }

    @Test
    public void testMin() {
        assertEquals(new BigInteger("0"), main._min());
    }

    @Test
    public void testMax() {
        assertEquals(new BigInteger("100"), main._max());
    }

    @Test
    public void testSum() {
        BigInteger expectedSum = new BigInteger("115"); // 1+2+3+4+5+100+0
        assertEquals(expectedSum, main._sum());
    }

    @Test
    public void testMult() {
        BigInteger expectedProduct = new BigInteger("0"); // Поскольку одно из чисел 0, произведение будет 0
        assertEquals(expectedProduct, main._mult());
    }

    @After
    public void tearDown() throws IOException {
        // Удаляем файл после завершения тестов
        Files.delete(Paths.get("test_numbers.txt"));
    }
}
